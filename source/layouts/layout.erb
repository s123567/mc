<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
<!-- SEO -->
    <meta content="<%= data.site.title %>" name="title"  />
    <meta content="<%= data.site.description %>" name="description" />
    <meta content="ruby on rails, Web applications, Site responsive, site artiste, gallerie d'art, Développeur freelance" name="keywords"   />
    <meta name="robots" content="<%= data.site.robots %>"  />
    <meta property="dc:language" content="fr-FR"  />
    <meta property="dc:creator" content="Mathieu Chiron"  />
    <meta property="dc:format" content="text/html"  />
    <meta property="og:type" content="website"  />
    <meta name="twitter:card" content="Mathieu Chiron"  />
    <meta name="twitter:site" content="Mathieu Chiron"  />
    <meta name="twitter:creator" content="Mathieu Chiron"  />
    <meta name="twitter:domain" content="http://mathieuchiron.com"  />
<!-- end seo -->
    <%= stylesheet_link_tag "all" %>
    <%= javascript_include_tag  "all" %>
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- Leave those next 4 lines if you care about users using IE8 -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>

  <body class="<%= page_classes %>">
    <nav class="navigation navbar navbar-default navbar-fixed-bottom navbar-wagon" role="navigation" id="nav_bar">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <% link_to "/index.html", class: "navbar-brand navbar-left" do %>
            Mathieu Chiron
          <% end %>
        </div>
        <%= partial 'phone_menu' %>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-right">
            <li>
              <% link_to "#testimony" do %>
                Témoignages
              <% end %>
            </li>
            <li>
              <% link_to "#portfolio" do %>
                 Portfolio
              <% end %>
            </li>
            <li>
              <% link_to "#perso" do %>
                 Petite Bio
              <% end %>
            </li>
            <li>
              <%= mail_to 'mathieu1chiron@gmail.com', 'Contact' %>

            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>

    <%= yield %>
    <script>
       AOS.init();
    </script>
  </body>
</html>
